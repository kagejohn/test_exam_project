
@{
    ViewBag.Title = "JoinCourse";
}

<h2>JoinCourse</h2>

@using (Ajax.BeginForm("JoinCoursePost", new AjaxOptions()))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Subject</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Student Id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("StudentId", "", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("StudentId", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Course Id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("CourseId", "", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("CourseId", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Paid", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBox("Paid", false, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("Paid", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
            <label>Success: </label>  @ViewBag.Success
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
